{
  "name": "knighthell-boilerplate-nestjs",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "version": "npm pkg get version",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --watch --debug",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/knighthell-boilerplate-nestjs/test/jest-e2e.json",
    "update": "ncu",
    "update:force": "ncu -u",
    "update:nestjs": "ncu \"/@nestjs*/\"",
    "update:nestjs:force": "ncu \"/@nestjs*/\" -u",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "export:env:service-version": "export SERVICE_VERSION=$(npm run version | tr -d '\"')",
    "server:place:start:dev": "npm run start:dev server-place",
    "server:place:start:debug": "npm run start:debug 10001 server-place",
    "server:place:start:prod": "node dist/apps/server-place/main",
    "server:place:typeorm:migration:generate": "npm run typeorm migration:generate -- apps/server-place/migration/title-migration -d dist/apps/grpc-title/migration/ormconfig.ts ",
    "server:place:docker:up": "docker-compose -f ./.config/docker-compose/db/docker-compose.db.yaml up -d server-place-postgres-postgis",
    "server:place:docker:down": "docker-compose -f ./.config/docker-compose/db/docker-compose.db.yaml down -v server-place-postgres-postgis",
    "server:place:build:container:docker": "npm run export:env:service-version && docker build -f ./apps/server-place/Dockerfile -t server-place:$SERVICE_VERSION",
    "server:place:build:container:podman": "npm run export:env:service-version && podman build -f ./apps/server-place/Dockerfile -t server-place:$SERVICE_VERSION",
    "server:place:deploy:gcp:run": "npm run service:place:build:container:docker && gcloud run deploy server:place:$SERVICE_VERSION"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.8",
    "@nestjs/common": "^10.2.8",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.8",
    "@nestjs/microservices": "^10.2.8",
    "@nestjs/platform-express": "^10.2.8",
    "@nestjs/platform-fastify": "^10.2.10",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^10.0.1",
    "nats": "^2.18.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.8",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "npm-check-updates": "^16.10.17",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@knighthell-boilerplate-nestjs/nestjs-cluster(|/.*)$": "<rootDir>/libs/nestjs-cluster/src/$1"
    }
  }
}
